<div class="container">
    <div class="row">
        {{#each restaurants}}
        <div class="col-4">

            <div class="card">
                <img src="{{this.image}}" alt="restaurant_image{{this.id}}">
                <div class="card-body">
                    <a href="/restaurants/{{this.id}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <span class="badge badge-secondary">{{this.Category.name}}</span>
                    <p class=" card-text">{{this.description}}</p>
                </div>
            </div>

        </div>
        {{/each}}
    </div>
</div>