<div class="container">
    <div class="row">
        {{#each restaurants}}
        <div class="col-4">

            <div class="card">
                <img src="{{this.image}}" alt="restaurant_image{{this.id}}">
                <div class="card-body">
                    <a href="/restaurants/{{this.id}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <span class="badge badge-secondary">{{this.Category.name}}</span>
                    <p class=" card-text">{{this.description}}</p>
                    {{#if isFavorited}}
                    <form class="d-inline-block" action="/favorite/{{this.id}}?_method=DELETE" method="POST"><button
                            type="submit" class="btn btn-danger">移除最愛</button></form>
                    {{else}}
                    <form class="d-inline-block" action="/favorite/{{this.id}}" method="POST"><button type="submit"
                            class="btn btn-primary">加到最愛</button></form>
                    {{/if}}
                    {{#if markedLike}}
                    <form class="d-inline-block" action="/like/{{this.id}}?_method=DELETE" method="POST"><button
                            type="submit" class="btn btn-danger">UnLike</button></form>
                    {{else}}
                    <form class="d-inline-block" action="/like/{{this.id}}" method="POST"><button type="submit"
                            class="btn btn-primary">Like</button></form>
                    {{/if}}
                </div>
            </div>

        </div>

        {{/each}}
    </div>
</div>