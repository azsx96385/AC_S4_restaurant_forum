<h1>餐廳後台</h1>

<a href='/admin/restaurants'>Restaurants | </a>
<a href='/admin/users'>Users | </a>
<div class="category_input">
  {{#if category}}
  <form action="/admin/categories/{{category.id}}?_method=PUT" method="post">
    {{else}}
    <form action="/admin/categories" method="post">
      {{/if}}
      <input type="text" name="name" id="categoryName" {{#if category}}value={{category.name}}{{/if}}>
      <button class="btn btn-primary" type="submit">{{#if category}}Update{{else}}Submit{{/if}}</button>
      {{#if category}}
      <a href="/admin/categories" class="btn btn-primary mr-4">Create New</a>
      {{/if}}

    </form>

</div>


<br />
<br />

<table class="table">
  <thead class="thead-dark">
    <tr>
      <th scope="col">#</th>
      <th scope="col">Name</th>
      <th scope="col">#</th>
    </tr>
  </thead>
  <tbody>
    {{#each categories}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.name}}</td>

      <td>
        <button type="button" class="btn btn-link">
          <a href="/admin/categories/{{this.id}}">
            Edit
          </a>
        </button>
        <button type="button" class="btn btn-link">
          <form action="/admin/categories/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
            <button class="btn btn-link" type="submit"> Delete </button>
          </form>
        </button>

      </td>
    </tr>
    {{/each}}
  </tbody>
</table>