<div class="row">
    <div class="col-3"><img src="{{user.image}}" alt="" style="height: 100px;weight:100px;"></div>
    <div class="col-9">
        <h5>{{user.name}}</h5>
        <p>{{user.email}}</p>
        {{#ifCond req.user.id req.params.id}}
        <a class="btn btn-primary" href="/users/{{user.id}}/edit">Edit</a>
        {{/ifCond}}
    </div>
</div>
<div class="row mt-3">
    <div class="col">
        <div class="card">
            <h5 class="card-header">已評論餐廳</h5>
            <div class="card-body">
                {{#each restaurants}}
                <a href="/restaurants/{{this.id}}"> <img src="{{this.image}}" alt="餐廳圖片{{this.id}}"
                        style="height:60px;weight:60px;"> </a>
                {{/each}}
            </div>
        </div>
    </div>
</div>